{
  "name": "ip-reverser-app",
  "version": "1.0.0",
  "description": "Web app that reverses client IP addresses",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "lint": "eslint src/",
    "docker:build": "docker build -t ip-reverser .",
    "docker:run": "docker run -p 3000:3000 ip-reverser"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "eslint": "^8.52.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "cobertura"
    ]
  }
}